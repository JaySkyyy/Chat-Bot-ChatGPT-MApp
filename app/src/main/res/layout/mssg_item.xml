<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/text_bot_bck"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/bot_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:id="@+id/bot_text_view"
            android:text="gmfldgmdf;g"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bot_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/bot_view"
        android:layout_alignStart="@id/bot_view"
        android:text="Время"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/text_user_bck"
        android:padding="5dp"
        android:layout_marginStart="80dp"
        android:id="@+id/user_view"
        >

        <TextView
            android:id="@+id/user_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="gjmfdgjdffl;gd"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/user_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/user_view"
        android:layout_alignEnd="@id/user_view"
        android:text="Время"/>

</RelativeLayout>